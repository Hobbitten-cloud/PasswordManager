<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <Grid>
        <ListBox x:Name="LB_Manager" ItemsSource="{Binding managerVM}" SelectedItem="{Binding SelectedManager}" SelectionMode="Extended" Margin="10,37,444,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Stored Passwords:" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Height="23" Width="106"/>
        <Label Content="1" HorizontalAlignment="Left" Margin="121,8,0,0" VerticalAlignment="Top" Width="22"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="262,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="262,73,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="262,112,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="262,148,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TB_Name" Text="{Binding SelectedManager.Name, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="389,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
        <TextBox x:Name="TB_Username" Text="{Binding SelectedManager.Username, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="392,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91"/>
        <TextBox x:Name="TB_Password" Text="{Binding SelectedManager.Password, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="389,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
        <TextBox x:Name="TB_Email" Text="{Binding SelectedManager.Email, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="389,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
        <Button x:Name="BT_NewPassword" Content="New" Click="BT_NewPassword_Click" HorizontalAlignment="Left" Margin="262,228,0,0" VerticalAlignment="Top" Height="24" Width="102"/>
        <Button x:Name="BT_DeletePassword" Content="Delete" Click="BT_DeletePassword_Click" HorizontalAlignment="Left" Margin="389,228,0,0" VerticalAlignment="Top" Height="24" Width="102"/>

    </Grid>
</Window>
